  <title>تسجيل الدخول - شات الملوك</title>
  <link rel="stylesheet" href="style.css">
  <style>
    body { background:#070707; color:gold; font-family: "Segoe UI", Tahoma, Arial; }
    .card { max-width:420px; margin:40px auto; background:#0d0d0d; border:2px solid gold; padding:24px; border-radius:12px; }
    input { width:100%; padding:10px; margin:8px 0; border-radius:8px; border:1px solid rgba(255,215,0,0.15); background:#000; color:gold; }
    button { background:gold; color:#000; border:none; padding:10px 14px; border-radius:8px; cursor:pointer; width:100%; font-weight:bold; }
    a { color:gold; text-decoration:none; }
    .small { font-size:14px; color:#ddd; margin-top:8px; display:block; text-align:center; }
  </style>
</head>
<body>
  <div class="card" role="main">
    <h2 style="text-align:center;margin:0 0 10px 0">دخول الحساب</h2>
    <input id="email" type="email" placeholder="البريد الإلكتروني" autocomplete="username" />
    <input id="password" type="password" placeholder="كلمة المرور" autocomplete="current-password" />
    <button id="loginBtn">تسجيل الدخول</button>
    <div style="display:flex;gap:8px;margin-top:10px">
      <a href="signup.html">تسجيل عضوية جديدة</a>
      <span style="flex:1"></span>
      <a href="reset.html">نسيت كلمة المرور؟</a>
    </div>
    <p class="small">بعد الدخول سيتم تحويلك إلى صفحة الدردشة.</p>
    <div id="msg" style="margin-top:8px;color:#ffb100"></div>
  </div>

  <script type="module">
    import { signInWithEmailAndPassword as signInFn } from "https://www.gstatic.com/firebasejs/12.4.0/firebase-auth.js";
    import { signInWithEmailPassword } from './script.js';
    import { getAuth, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/12.4.0/firebase-auth.js";

    const emailInput = document.getElementById('email');
    const passInput = document.getElementById('password');
    const loginBtn = document.getElementById('loginBtn');
    const msgDiv = document.getElementById('msg');

    loginBtn.addEventListener('click', async () => {
      const email = emailInput.value.trim();
      const password = passInput.value.trim();
      msgDiv.textContent = '';
      if (!email || !password) { msgDiv.textContent = 'أدخل البريد وكلمة المرور'; return; }
      try {
        await signInWithEmailPassword(email, password);
        msgDiv.textContent = 'تم تسجيل الدخول... جارٍ التحويل';
        setTimeout(()=> location.href = 'chat.html', 700);
      } catch (e) {
        console.error(e);
        msgDiv.textContent = 'خطأ عند تسجيل الدخول: ' + (e.message || e);
      }
    });

    // إذا المستخدم مسجّل سابقًا نعيد توجيهه
    import { auth } from './script.js';
    onAuthStateChanged(getAuth(), (u) => {
      if (u) location.href = 'chat.html';
    });
  </script>
</body>
