<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>طلب استعادة كلمة المرور</title>
  <link rel="stylesheet" href="style.css">
  <style>
    body { background:#070707; color:gold; font-family: "Segoe UI", Tahoma, Arial; }
    .card { max-width:420px; margin:40px auto; background:#0d0d0d; border:2px solid gold; padding:24px; border-radius:12px; }
    input { width:100%; padding:10px; margin:8px 0; border-radius:8px; border:1px solid rgba(255,215,0,0.15); background:#000; color:gold; }
    button { background:gold; color:#000; border:none; padding:10px 14px; border-radius:8px; cursor:pointer; width:100%; font-weight:bold; }
    .small { font-size:14px; color:#ddd; margin-top:8px; display:block; text-align:center; }
  </style>
</head>
<body>
  <div class="card">
    <h3 style="text-align:center">استعادة كلمة المرور</h3>
    <input id="email" type="email" placeholder="أدخل بريدك الإلكتروني" />
    <button id="resetBtn">أرسل رابط إعادة تعيين</button>
    <p class="small"><a href="login.html">العودة لتسجيل الدخول</a></p>
    <div id="msg" style="margin-top:8px;color:#ffb100"></div>
  </div>

  <script type="module">
    import { sendPasswordResetEmail } from "https://www.gstatic.com/firebasejs/12.4.0/firebase-auth.js";
    import { getAuth } from "https://www.gstatic.com/firebasejs/12.4.0/firebase-auth.js";
    const auth = getAuth();
    const email = document.getElementById('email');
    const msg = document.getElementById('msg');
    document.getElementById('resetBtn').addEventListener('click', async () => {
      const e = email.value.trim();
      msg.textContent = '';
      if (!e) { msg.textContent = 'أدخل بريدك الإلكتروني'; return; }
      try {
        await sendPasswordResetEmail(auth, e);
        msg.textContent = 'تم إرسال رابط إعادة التعيين إلى الإيميل (تحقق من صندوق الوارد).';
      } catch (err) {
        console.error(err);
        msg.textContent = 'خطأ: ' + (err.message || err);
      }
    });
  </script>
</body>
</html>